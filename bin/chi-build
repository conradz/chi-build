#!/usr/bin/env node

var opts = require('nomnom'),
    build = require('../');

opts.command('test')
    .callback(build.test)
    .help('Run the test script in Sauce Labs');

opts.command('serve')
    .callback(build.serve)
    .help('Run server for the test scripts')
    .option('port', {
        abbr: 'p',
        default: 8000,
        help: 'The port for the HTTP server'
    });

opts.parse();